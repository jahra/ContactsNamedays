<Window x:Class="ContactsNamedays.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactsNamedays"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Height="25" Margin="185,10,0,0" VerticalAlignment="Top" Width="133" BorderThickness="0"/>
        <TextBox x:Name="input" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" ToolTip="Zadej jmeno" TextChanged="input_TextChanged"/>
        <Button x:Name="button" Content="Add" HorizontalAlignment="Left" Height="23" Margin="333,12,0,0" VerticalAlignment="Top" Width="86" Click="button_Click"/>
        <DataGrid x:Name="dataGrid" Margin="0,50,0,0" ItemsSource="{Binding }" SelectionChanged="dataGrid_SelectionChanged"/>
    </Grid>
</Window>
